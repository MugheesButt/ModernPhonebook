<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".ModifyContact">

    <include
        android:id="@+id/Profile"
        layout="@layout/profiletoolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:weightSum="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:textSize="15dp">

        </TextView>

        <EditText
            android:id="@+id/nameModify"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:hint="   Enter Name"
            android:textColorHint="#000000"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="@drawable/rectangular_block">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            ></LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Phone No"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:textSize="15dp">

        </TextView>

        <EditText
            android:id="@+id/phoneModify"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:hint="   Enter Phone No"
            android:textColorHint="#000000"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="@drawable/rectangular_block">

        </EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            ></LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="Enter Address"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:textSize="15dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="5"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="20dp"
                android:background="@drawable/ic_search_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/fab_location_searchModify"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:text="Enter Location"
                android:gravity="center_vertical"
                android:background="#fff"
                style="?android:attr/borderlessButtonStyle"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                >

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:weightSum="7"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Select Image"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textSize="15dp">

        </TextView>


        <ImageView
            android:id="@+id/ImgButtonEdit"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:background="#fafafa"
            android:layout_weight="4">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2"
            android:weightSum="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            </LinearLayout>

            <Button
                android:layout_weight="1"
                android:id="@+id/buttonupdateModify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:text="  UPDATE  " />

            <Button
                android:layout_weight="1"
                android:id="@+id/buttondelModify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:text="  DELETE  " />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>




</LinearLayout>